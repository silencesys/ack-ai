{
  "name": "ack-ai",
  "displayName": "Ack-AI",
  "description": "Flags @ai-gen tags in DocBlocks that haven't been marked as 'ok'.",
  "version": "1.0.0",
  "publisher": "silencesys",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/silencesys/ack-ai"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:php",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:java",
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:csharp",
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:swift",
    "onLanguage:kotlin",
    "onLanguage:scala",
    "onLanguage:dart",
    "onLanguage:groovy",
    "onLanguage:objective-c",
    "onLanguage:objective-cpp",
    "onLanguage:python",
    "onLanguage:ruby",
    "onLanguage:shellscript",
    "onLanguage:perl",
    "onLanguage:r",
    "onLanguage:yaml",
    "onLanguage:dockerfile",
    "onLanguage:makefile",
    "onLanguage:coffeescript",
    "onLanguage:powershell",
    "onLanguage:elixir"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ackAi.toggleAllowedIndicators",
        "title": "Ack-AI: Toggle Reviewed Code Indicators"
      }
    ],
    "configuration": {
      "title": "Ack-AI Settings",
      "properties": {
        "ackAi.tag": {
          "type": "string",
          "default": "@ai-gen",
          "description": "The specific tag to search for in comments (e.g. '@ai-gen' or '@review')."
        },
        "ackAi.allowedStates": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "ok"
          ],
          "description": "List of keywords that mark the code as reviewed (case-insensitive)."
        },
        "ackAi.rejectedStates": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "rejected",
            "reject"
          ],
          "description": "List of keywords that mark the code as rejected (case-insensitive)."
        },
        "ackAi.warningColor": {
          "type": "string",
          "default": "rgba(255, 215, 0, 0.1)",
          "description": "Background color for code awaiting review (CSS color string)."
        },
        "ackAi.rejectedColor": {
          "type": "string",
          "default": "rgba(255, 0, 0, 0.1)",
          "description": "Background color for rejected code (CSS color string)."
        },
        "ackAi.allowedColor": {
          "type": "string",
          "default": "rgba(0, 77, 255, 0.1)",
          "description": "Color for the gutter indicator on reviewed code (CSS color string)."
        },
        "ackAi.reviewedIndicatorStyle": {
          "type": "string",
          "enum": [
            "gutter",
            "background"
          ],
          "default": "gutter",
          "description": "Style for reviewed code indicators: 'gutter' shows a subtle line in the gutter area, 'background' highlights the entire line with color."
        },
        "ackAi.showReviewedIndicators": {
          "type": "boolean",
          "default": false,
          "description": "Show indicators for reviewed (@ai-gen ok) code blocks. Can also be toggled via command palette."
        },
        "ackAi.detectInlineComments": {
          "type": "boolean",
          "default": true,
          "description": "Whether to detect @ai-gen tags in inline comments (//)."
        },
        "ackAi.detectFileLevelComments": {
          "type": "boolean",
          "default": true,
          "description": "Whether to highlight the entire file when @ai-gen is at the top of the file."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vitest",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  }
}
