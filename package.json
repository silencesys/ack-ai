{
  "name": "ai-gen-reviewer",
  "displayName": "AI Code Reviewer",
  "description": "Flags @ai-gen tags in DocBlocks that haven't been marked as 'ok'.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:php",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "AI Gen Reviewer",
      "properties": {
        "aiGenReviewer.tag": {
          "type": "string",
          "default": "@ai-gen",
          "description": "The specific tag to search for in comments (e.g. '@ai-gen' or '@review')."
        },
        "aiGenReviewer.allowedStates": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["ok"],
          "description": "List of keywords that mark the code as reviewed (case-insensitive)."
        },
        "aiGenReviewer.detectInlineComments": {
          "type": "boolean",
          "default": true,
          "description": "Whether to detect @ai-gen tags in inline comments (//)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  }
}
